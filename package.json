{
  "name": "annotate",
  "version": "0.0.1",
  "private": true,
  "main": "main/index.js",
  "productName": "Annotate",
  "description": "A small utility app to boost your video calls and screen sharing.",
  "author": {
    "name": "Achuth Hadnoor",
    "email": "hey@achuth.dev",
    "url": "https://achuth.dev"
  },
  "scripts": {
    "start": "next build renderer && next start renderer",
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "next build renderer && next export renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "type-check": "tsc -p ./renderer/tsconfig.json && tsc -p ./electron-src/tsconfig.json"
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "electron-next": "^3.1.5",
    "electron-util": "^0.17.2",
    "perfect-freehand": "^1.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "roughjs": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.9",
    "@types/react-dom": "^16.9.9",
    "autoprefixer": "^10.4.13",
    "electron": "^13",
    "electron-builder": "^23.0.3",
    "next": "latest",
    "postcss": "^8.4.21",
    "rimraf": "^3.0.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.0.5",
    "electron-builder-notarize": "^1.4.0"
  },
  "build": {
    "appId": "com.achuth.annotate",
    "afterSign": "electron-builder-notarize",
    "asar": true,
    "files": [
      "assets",
      "main",
      "renderer/out"
    ],
    "mac": {
      "electronUpdaterCompatibility": ">=2.16",
      "category": "public.app-category.productivity",
      "minimumSystemVersion": "10.12.0",
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "extendInfo": {
        "NSUserNotificationAlertStyle": "alert"
      },
      "target": {
        "target": "default",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "iconSize": 160,
      "contents": [
        {
          "x": 180,
          "y": 170
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
